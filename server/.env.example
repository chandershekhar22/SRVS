# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/srvs

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:5173/auth/linkedin/callback

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Resend API (for email delivery on cloud platforms where SMTP is blocked)
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=SRVS <noreply@yourdomain.com>
# Set to 'true' to use Resend by default instead of SMTP
USE_RESEND=false

# Test Email Configuration (for sync testing)
# Each sync generates 3 respondents: 2 random + 1 with this test email
TEST_EMAIL=jrahul1790@gmail.com
TEST_NAME=Test User
